<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/alpinejs/3.13.3/cdn.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css"
    ></script>
    <style>
      .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
      }
      .custom-scrollbar::-webkit-scrollbar-track {
        background: #f1f1f1;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 3px;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: #555;
      }
    </style>
  </head>
  <body class="bg-yellow-300">
    <div
      x-data="{ 
        isSidebarOpen: false, 
        isProductOpen: false,
        paragraphs: [],
        loremText: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin ornare magna eros, eu pellentesque tortor vestibulum ut. Maecenas non massa sem. Etiam finibus odio quis feugiat facilisis.',
        generateParagraphs() {
            this.paragraphs = Array(500).fill().map((_, i) => `Paragraph ${i + 1}: ${this.loremText}`);
        }
    }"
      x-init="generateParagraphs"
      @keydown.escape.window="isSidebarOpen = false"
      :class="{'overflow-hidden': isSidebarOpen}"
      class="relative"
    >
      <!-- Mobile Menu Button -->
      <div
        class="lg:hidden fixed top-0 right-0 p-4 bg-blue-500 w-full flex justify-between items-center"
      >
        <div class="text-white text-xl">LOGO</div>
        <button
          @click="isSidebarOpen = true"
          class="text-white text-2xl focus:outline-none"
        >
          ≡MENU
        </button>
      </div>

      <!-- Backdrop -->
      <div
        x-show="isSidebarOpen"
        class="fixed inset-0 bg-black/50 backdrop-blur-sm lg:hidden"
      >
      </div>

      <!-- Sidebar Container -->
      <div
        :class="{'translate-x-0': isSidebarOpen, '-translate-x-full': !isSidebarOpen}"
        class="fixed top-0 left-0 h-full w-[80%] lg:w-64 lg:p-4 transform transition-transform duration-300 ease-in-out lg:translate-x-0 z-50"
      >
        <!-- Sidebar Content with rounded corners on desktop -->
        <div
          class="h-full bg-white/80 backdrop-blur-sm rounded-none lg:rounded-lg overflow-hidden flex flex-col"
        >
          <!-- Sidebar Header -->
          <div
            class="p-4 border-b border-gray-200 flex justify-between items-center bg-gray-100"
          >
            <div class="text-xl font-bold">LOGO</div>
            <button
              @click="isSidebarOpen = false"
              class="lg:hidden text-gray-500 hover:text-gray-700 focus:outline-none"
            >
              ✕
            </button>
          </div>

          <!-- Navigation Menu - Scrollable Area -->
          <nav class="flex-1 custom-scrollbar overflow-y-auto">
            <div class="p-4 space-y-2">
              <a
                href="#"
                class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                >Home</a
              >
              <a
                href="#"
                class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                >About</a
              >
              <a
                href="#"
                class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                >Contact</a
              >

              <!-- Product Dropdown -->
              <div class="space-y-2">
                <button
                  @click="isProductOpen = !isProductOpen"
                  class="w-full px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors flex justify-between items-center"
                >
                  Product
                  <span
                    class="transform transition-transform duration-200"
                    :class="{'rotate-45': isProductOpen}">+</span
                  >
                </button>

                <!-- Dropdown Content -->
                <div
                  x-show="isProductOpen"
                  x-transition:enter="transition ease-out duration-200"
                  x-transition:enter-start="opacity-0 transform scale-y-95"
                  x-transition:enter-end="opacity-100 transform scale-y-100"
                  x-transition:leave="transition ease-in duration-100"
                  x-transition:leave-start="opacity-100 transform scale-y-100"
                  x-transition:leave-end="opacity-0 transform scale-y-95"
                  class="pl-4 space-y-1"
                >
                  <a
                    href="#"
                    class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                    >Book</a
                  >
                  <a
                    href="#"
                    class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                    >Flyers</a
                  >
                  <a
                    href="#"
                    class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                    >Sticker</a
                  >
                  <a
                    href="#"
                    class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                    >Menu Book</a
                  >
                  <a
                    href="#"
                    class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                    >Envelope</a
                  >
                  <a
                    href="#"
                    class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                    >Packaging</a
                  >
                  <a
                    href="#"
                    class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                    >Sublimition</a
                  >
                  <a
                    href="#"
                    class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                    >Card</a
                  >
                </div>
              </div>

              <a
                href="#"
                class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                >Tutorial</a
              >
              <a
                href="#"
                class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                >Location</a
              >
              <a
                href="#"
                class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                >Support</a
              >
              <a
                href="#"
                class="block px-4 py-2 rounded-md bg-white hover:bg-gray-50 transition-colors"
                >Delivery</a
              >
            </div>
          </nav>
        </div>
      </div>

      <!-- Main Content -->
      <div class="lg:ml-72 mt-16 lg:mt-0">
        <h1 class="text-3xl font-bold mb-4">Welcome to my business site</h1>
        <div class="space-y-4">
          <template x-for="paragraph in paragraphs" :key="paragraph">
            <p class="text-gray-700" x-text="paragraph"></p>
          </template>
        </div>
      </div>
    </div>
  </body>
</html>
